pipeline {
    agent any

    tools {
        maven 'Maven'    // Make sure Maven is installed and configured in Jenkins global tools
        jdk 'Java11'     // Ensure Java 11 is configured in Jenkins global tools
    }

    stages {
        stage('Checkout') {
            steps {
                // Jenkins automatically checks out the repo when using "Pipeline script from SCM"
                // but you can keep this for clarity
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy step goes here (e.g., copy JAR, run script, or Docker build)'
            }
        }
    }
}

