pipeline {
    agent any
    tools {
        maven 'Maven'   // Make sure Maven is installed and configured in Jenkins
        jdk 'Java11'    // Ensure Java is configured in Jenkins global tools
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/shaikoushi/samplefile/jenkinsfile.txt'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy step goes here (e.g., copy JAR, run script)'
            }
        }
    }
}
